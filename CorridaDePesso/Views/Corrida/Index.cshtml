@using CorridaDePesso.Models;
@model IEnumerable<CorridaDePesso.Models.Corrida>

@{
    ViewBag.Title = "Corridas em Andamento";
}

<h2>Corridas em andamento</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataFinal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataFinal)
        </td>
        <td>
            @Html.ActionLink("Solicitar Inscrição", "Create", "Corredor", new { corridaId = item.Id }, null) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @if (Session["Usuario"] != null && ((ApplicationUser)Session["Usuario"]).TipoUsuario == TipoConta.Administrador)
            {
                @Html.ActionLink("Resultados", "Index", "DashboardCorrida", new { corridaId = item.Id }, null) 
            }
        </td>
    </tr>
}

</table>
